
<div class="kotha-default-content">
  <div class="container">
    <div class="row">
      <div class="col-sm-8">
        <article class="single-blog contact-us">
          <div class="kotha-logo text-center">
            <h1><a href="<%= root_path %>">
              <%= image_tag("cover-photo.png", alt: "Colorful Camels Logo", title: "Colorful Camels") %>
            </a></h1>
          </div>
          <div class="post-content">

            <%= render "partials/flash" %> 

            <div class="entry-header text-center text-uppercase">

              <h2 class="text-left">CREATE YOUR Colorful Camels ACCOUNT</h2>
            </div>
            

            <div class="leave-comment">
              <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
                <div class="form-group">
                  <div class="row tpad-15">
                    <div class="col-sm-6">
                      <%= f.text_field :first_name, class:"form-control", placeholder: "First Name" %>
                    </div>

                    <div class="col-sm-6">
                      <%= f.text_field :last_name, class: "form-control", placeholder: "LastName"  %>
                    </div>
                  </div>

                  <div class="row tpad-15">
                    <div class="col-sm-6">
                      <%= f.text_field :username, class: "form-control", placeholder: "Username/Nickname"  %>
                    </div>

                    <div class="col-sm-6">
                      <%= f.email_field :email, class: "form-control ", placeholder:"Email",:autocomplete => "off" %>
                    </div>
                  </div>

                  <div class="row tpad-15">
                    <div class="col-sm-6">
                      <%= f.password_field :password, class: "form-control", placeholder: "Password",:autocomplete => "off" %>
                    </div>
                    <div class="col-sm-6">
                      <%= f.password_field :password_confirmation, class: "form-control", id: "password2", placeholder: "Re-enter Password"%>
                    </div>
                  </div>

                  <div class="row tpad-15">
                    <div class="col-sm-6">

                      <%= f.select :affiliation, options_for_select([["Select Your Conn Affiliation",nil],['Student',1], ['Faculty',2], ['Staff',3],['Alumni',4],['Faculty Emeritus',5],['Retired - Staff',6],['OTHER',0]],:selected=>@user.affiliation),{}, {:class => 'form-control'} %>
                    </div>

                    <div class="col-sm-6 tpad-15">
                      <div class="contact100-form-checkbox">
                        <input id="ckb2" type="checkbox" name="remember-me" required>
                        <label class="label-checkbox100" for="ckb2">
                          <span class="txt1 widget-title small">
                            I agree to the <a href="#" class="txt2 hov1">Terms of Use and Privacy Policy.</a>
                          </span>
                        </label>
                      </div>
                    </div>
                  </div>

                        <%= f.text_area :bio, class:"form-control", :rows => "2", placeholder:"Short bio (optional)"%>

                    <button  style="margin-top: 15px" type="submit" class="btn send-btn tpad-15"><i class="fa fa-user-plus" aria-hidden="true"></i> CREATE ACCOUNT</button>

                </div>
                
                
              <% end %>

              <a role="button" href="<%= new_user_session_path %>" class="btn btn-success"><i class="fa fa-sign-in" aria-hidden="true"></i> Have an account? LOGIN instead</a>

            </div>
          </div>
        </article>
